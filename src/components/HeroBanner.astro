---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<div
  class="hero-banner flex flex-col items-center justify-center py-24 text-white"
>
  <h1 class="text-stroke-white text-black">Oze</h1>
  <h1 class="mb-48 text-white">{title}</h1>
  <h3>scroll</h3>
  <svg
    class="w-6 h-6 text-white animate-bounce mt-4"
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 14 8"
  >
    <path
      stroke="currentColor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="m1 1 5.326 5.7a.909.909 0 0 0 1.348 0L13 1"></path>
  </svg>
</div>

<style>
  div.hero-banner h1 {
    font-size: 3.5em;
  }

  div.hero-banner {
    background-image: url("/bg_black_1.jpeg");
    background-size: 200%; /* Enlarges the image to 400% of its original size */
    background-repeat: no-repeat;
    background-position: center calc(100% + 30px); /* Centers the background image */
  }

  .text-stroke-white {
    -webkit-text-stroke: 2px white;
    text-stroke: 2px white;
  }
</style>
